    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
        }

        ul {
            list-style-type: none;
        }

        li a {
            display: block;
            padding: 30px;
        }

        li {
            float: left;
        }

            li a:hover {
                background-color: beige;
            }

        /*nav {
